{
  "scopeName": "source.genotype",
  "name": "Genotype",
  "fileTypes": ["type"],
  "patterns": [
    { "include": "#moduleDoc" },
    { "include": "#comments" },
    { "include": "#alias" },
    { "include": "#imports" },
    { "include": "#descriptor" }
  ],
  "repository": {
    "moduleDoc": {
      "patterns": [
        {
          "name": "comment.block.documentation.genotype",
          "match": "//!.*$"
        }
      ]
    },
    "lineDoc": {
      "patterns": [
        {
          "name": "comment.line.documentation.genotype",
          "match": "///.*$"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.block.genotype",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [{ "include": "#comments" }]
        },
        {
          "name": "comment.line.double-slash.genotype",
          "match": "//[^/!].*$"
        },
        { "include": "#moduleDoc" },
        { "include": "#lineDoc" }
      ]
    },
    "alias": {
      "patterns": [
        {
          "name": "meta.alias.genotype",
          "begin": "^(\\s*)(\\b[A-Za-z]+\\b)(\\s*)(=)",
          "beginCaptures": {
            "2": { "name": "entity.name.type.alias.genotype" },
            "4": { "name": "keyword.operator.assignment.genotype" }
          },
          "end": "(?=$)",
          "patterns": [{ "include": "#descriptor" }, { "include": "#comments" }]
        }
      ]
    },
    "imports": {
      "patterns": [
        {
          "name": "meta.import.genotype",
          "begin": "\\buse\\b",
          "beginCaptures": {
            "0": { "name": "keyword.control.import.genotype" }
          },
          "end": "(?=$)",
          "patterns": [
            {
              "name": "entity.name.import.path.genotype",
              "match": "((?:\\./|\\.\\./|[^/\\s]+/)+)"
            },
            {
              "include": "#importReference"
            },
            { "include": "#comments" }
          ]
        }
      ]
    },
    "importReference": {
      "patterns": [
        {
          "name": "keyword.operator.wildcard.genotype",
          "match": "\\*"
        },
        {
          "name": "meta.import.names.genotype",
          "begin": "\\{",
          "end": "\\}",
          "beginCaptures": {
            "0": { "name": "punctuation.section.block.begin.genotype" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.section.block.end.genotype" }
          },
          "patterns": [
            {
              "name": "entity.name.type.genotype",
              "match": "\\b[A-Za-z]+\\b"
            },
            {
              "name": "keyword.control.import.alias.genotype",
              "match": "\\b(as)\\b"
            },
            {
              "name": "entity.name.type.alias.genotype",
              "match": "\\b[A-Za-z]+\\b"
            },
            {
              "name": "punctuation.separator.comma.genotype",
              "match": ","
            },
            { "include": "#comments" }
          ]
        },
        {
          "name": "entity.name.type.genotype",
          "match": "\\b[A-Za-z]+\\b"
        }
      ]
    },
    "descriptor": {
      "patterns": [
        { "include": "#primitive" },
        { "include": "#nullable" },
        { "include": "#object" },
        { "include": "#array" },
        { "include": "#tuple" },
        { "include": "#inlineImport" },
        { "include": "#identifier" },
        { "include": "#comments" }
      ]
    },
    "primitive": {
      "name": "storage.type.primitive.genotype",
      "match": "\\b(string|int|float|boolean)\\b"
    },
    "nullable": {
      "name": "storage.modifier.nullable.genotype",
      "match": "\\?"
    },
    "object": {
      "name": "meta.object.genotype",
      "begin": "\\{",
      "end": "\\}",
      "beginCaptures": {
        "0": { "name": "punctuation.section.block.begin.genotype" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.section.block.end.genotype" }
      },
      "patterns": [{ "include": "#property" }, { "include": "#comments" }]
    },
    "property": {
      "patterns": [
        {
          "begin": "(\\b[A-Za-z]+\\b)(\\s*)(\\??:)",
          "beginCaptures": {
            "1": { "name": "variable.other.property.genotype" },
            "3": { "name": "punctuation.separator.key-value.genotype" }
          },
          "end": "(?=,|\\}|$)",
          "patterns": [{ "include": "#descriptor" }, { "include": "#comments" }]
        },
        { "include": "#comments" }
      ]
    },
    "array": {
      "name": "meta.array.genotype",
      "begin": "\\[",
      "end": "\\]",
      "beginCaptures": {
        "0": { "name": "punctuation.section.brackets.begin.genotype" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.section.brackets.end.genotype" }
      },
      "patterns": [{ "include": "#descriptor" }, { "include": "#comments" }]
    },
    "tuple": {
      "name": "meta.tuple.genotype",
      "begin": "\\(",
      "end": "\\)",
      "beginCaptures": {
        "0": { "name": "punctuation.section.group.begin.genotype" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.section.group.end.genotype" }
      },
      "patterns": [
        { "include": "#descriptor" },
        {
          "name": "punctuation.separator.comma.genotype",
          "match": ","
        },
        { "include": "#comments" }
      ]
    },
    "inlineImport": {
      "patterns": [
        {
          "name": "meta.inline-import.genotype",
          "match": "((?:\\./|\\.\\./|[^/\\s]+/)+)(\\b[A-Za-z]+\\b)",
          "captures": {
            "1": { "name": "entity.name.import.path.genotype" },
            "2": { "name": "entity.name.type.genotype" }
          }
        }
      ]
    },
    "identifier": {
      "name": "entity.name.type.genotype",
      "match": "\\b[A-Za-z]+\\b"
    }
  }
}
