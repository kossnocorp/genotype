{
  "scopeName": "source.genotype",
  "name": "Genotype",
  "fileTypes": ["type"],
  "patterns": [
    { "include": "#moduleDoc" },
    { "include": "#lineDoc" },
    { "include": "#comments" },
    { "include": "#imports" },
    { "include": "#alias" }
  ],
  "repository": {
    "moduleDoc": {
      "patterns": [
        {
          "name": "comment.block.documentation.genotype",
          "match": "^\\s*//!.*$"
        }
      ]
    },
    "lineDoc": {
      "patterns": [
        {
          "name": "comment.line.documentation.genotype",
          "match": "^\\s*///.*$"
        }
      ]
    },
    "comments": {
      "patterns": [
        { "include": "#lineDoc" },
        {
          "name": "comment.line.double-slash.genotype",
          "match": "^\\s*//[^/!].*$"
        },
        {
          "name": "comment.block.genotype",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [{ "include": "#comments" }]
        }
      ]
    },
    "imports": {
      "patterns": [
        {
          "name": "meta.import.genotype",
          "begin": "^\\s*(use)\\b",
          "beginCaptures": {
            "1": { "name": "keyword.control.import.genotype" }
          },
          "end": "(?=$)",
          "patterns": [
            { "include": "#path" },
            { "include": "#importReference" },
            { "include": "#comments" }
          ]
        }
      ]
    },
    "path": {
      "patterns": [
        {
          "name": "string.path.genotype",
          "match": "((?:\\.\\./|\\./|[^/\\s]+/)+)"
        }
      ]
    },
    "importReference": {
      "patterns": [
        {
          "name": "keyword.operator.glob.genotype",
          "match": "\\*"
        },
        {
          "name": "meta.import.names.genotype",
          "begin": "\\{",
          "beginCaptures": {
            "0": { "name": "punctuation.section.block.begin.genotype" }
          },
          "end": "\\}",
          "endCaptures": {
            "0": { "name": "punctuation.section.block.end.genotype" }
          },
          "patterns": [
            {
              "name": "meta.aliased.type.genotype",
              "match": "\\b(?!as\\b)([A-Za-z][A-Za-z0-9]*)\\b\\s*(as)\\s*\\b([A-Za-z][A-Za-z0-9]*)\\b",
              "captures": {
                "1": { "name": "meta.aliased.type.genotype" },
                "2": { "name": "keyword.control.import.alias.genotype" },
                "3": { "name": "entity.name.type.alias.genotype" }
              }
            },
            {
              "name": "meta.definition.type.genotype",
              "match": "\\b(?!as\\b)([A-Za-z][A-Za-z0-9]*)\\b",
              "captures": {
                "1": { "name": "entity.name.type.genotype" }
              }
            },
            {
              "name": "punctuation.separator.comma.genotype",
              "match": ","
            },
            { "include": "#comments" }
          ]
        },
        {
          "name": "meta.definition.type.genotype",
          "match": "\\b(?!as\\b)([A-Za-z][A-Za-z0-9]*)\\b",
          "captures": {
            "1": { "name": "entity.name.type.genotype" }
          }
        }
      ]
    },
    "alias": {
      "patterns": [
        {
          "name": "meta.alias.genotype",
          "begin": "^\\s*(\\b[A-Za-z][A-Za-z0-9]*\\b)\\s*(=)",
          "beginCaptures": {
            "1": { "name": "entity.name.type.alias.genotype" },
            "2": { "name": "keyword.operator.assignment.genotype" }
          },
          "end": "(?=$)",
          "patterns": [{ "include": "#descriptor" }, { "include": "#comments" }]
        }
      ]
    },
    "descriptor": {
      "patterns": [
        { "include": "#primitive" },
        { "include": "#nullableOperator" },
        { "include": "#object" },
        { "include": "#array" },
        { "include": "#tuple" },
        { "include": "#inlineImport" },
        { "include": "#identifier" },
        { "include": "#comments" }
      ]
    },
    "primitive": {
      "name": "storage.type.primitive.genotype",
      "match": "\\b(string|int|float|boolean)\\b"
    },
    "nullableOperator": {
      "name": "keyword.operator.nullable.genotype",
      "match": "\\?"
    },
    "object": {
      "name": "meta.object.genotype",
      "begin": "\\{",
      "beginCaptures": {
        "0": { "name": "punctuation.section.block.begin.genotype" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.section.block.end.genotype" }
      },
      "patterns": [{ "include": "#properties" }, { "include": "#comments" }]
    },
    "properties": {
      "patterns": [
        { "include": "#lineDoc" },
        { "include": "#property" },
        {
          "name": "punctuation.separator.comma.genotype",
          "match": ","
        },
        { "include": "#comments" }
      ]
    },
    "property": {
      "patterns": [
        {
          "name": "meta.property.genotype",
          "begin": "\\s*(\\b[A-Za-z][A-Za-z0-9]*\\b)(\\??)(:|\\?:)",
          "beginCaptures": {
            "1": { "name": "variable.other.property.genotype" },
            "2": { "name": "keyword.operator.optional.genotype" },
            "3": { "name": "punctuation.separator.key-value.genotype" }
          },
          "end": "(?=,|\\}|$)",
          "patterns": [{ "include": "#descriptor" }, { "include": "#comments" }]
        }
      ]
    },
    "array": {
      "name": "meta.array.genotype",
      "begin": "\\[",
      "beginCaptures": {
        "0": { "name": "punctuation.section.brackets.begin.genotype" }
      },
      "end": "\\]",
      "endCaptures": {
        "0": { "name": "punctuation.section.brackets.end.genotype" }
      },
      "patterns": [{ "include": "#descriptor" }, { "include": "#comments" }]
    },
    "tuple": {
      "name": "meta.tuple.genotype",
      "begin": "\\(",
      "beginCaptures": {
        "0": { "name": "punctuation.section.group.begin.genotype" }
      },
      "end": "\\)",
      "endCaptures": {
        "0": { "name": "punctuation.section.group.end.genotype" }
      },
      "patterns": [
        { "include": "#descriptor" },
        {
          "name": "punctuation.separator.comma.genotype",
          "match": ","
        },
        { "include": "#comments" }
      ]
    },
    "inlineImport": {
      "name": "meta.inline-import.genotype",
      "match": "((?:\\.\\./|\\./|[^/\\s]+/)+)([A-Za-z][A-Za-z0-9]*)",
      "captures": {
        "1": { "name": "entity.name.import.path.genotype" },
        "2": { "name": "entity.name.type.genotype" }
      }
    },
    "identifier": {
      "name": "entity.name.type.genotype",
      "match": "\\b(?!as\\b|string\\b|int\\b|float\\b|boolean\\b)[A-Za-z][A-Za-z0-9]*\\b"
    }
  }
}
